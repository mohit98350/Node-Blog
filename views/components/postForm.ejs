<form class="form"action="/createPost" method="Post" enctype="multipart/form-data">
    <div class="group">
         <h3>Create new post</h3>
     </div>
    <div class="group">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="control"
        placeholder="Post Title"autocomplete="off" value="<%- input_title%>">
    </div>
    <div class="group">
        <label for="body">Body</label>
        <input  type="text" name="body" autocomplete="off" id="body" class="control input_post" 
          value="<%- body%>">
    </div>
    
        <div class="group">
    
        <label for="isPublic">Public</label>
        <input type="checkbox" name="isPublic" id="isPublic" checked="true" value="true">
    </div>
    
    
    <div class="group">
        <label for="imageLabel" class="fileLabel">Upload Image</label>
        <input type="file" name="image" id="imageLabel" >
    </div>
    
    <div class="group">
        <input type="submit" value="Add Post" class="btn btn-sweet">
    </div>
</form>