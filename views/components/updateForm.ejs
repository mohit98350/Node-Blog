<form action="/update" method="Post" >
    <div class="group">
         <h3>Update Post</h3>
     </div>
    <div class="group">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="control"
        placeholder="Post Title"autocomplete="off" value="<%- post.title%>">
    </div>
    <input type="hidden" name="hiddenID" value="<%- post._id%>">
    <div class="group">
        <label for="body">Body</label>
        <input  type="text" name="body" autocomplete="off" id="body" class="control input_post" 
          value="<%- post.body%>">
    </div>
   
    <div class="group">
        <input type="submit" value="Update Post" class="btn btn-sweet">
    </div>
</form>